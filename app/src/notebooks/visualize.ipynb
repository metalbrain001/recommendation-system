    "from prettytable import PrettyTable\n",
    "\n",
    "\n",
    "def format_recommendations(recommendations, title):\n",
    "    table = PrettyTable()\n",
    "    table.field_names = [\"#\", \"Recommendations\"]\n",
    "    for i, rec in enumerate(recommendations, start=1):\n",
    "        table.add_row([i, rec])\n",
    "    print(f\"{title}\\n{table}\\n\")"
   ]
  }
